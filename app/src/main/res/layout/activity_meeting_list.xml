<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="joandev.jedimeetingsapp.ui.MeetingList.MeetingListActivity">


    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:background="#ffffff"
        android:id="@+id/list2" android:layout_gravity="center_horizontal|top"
    />

    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/multiple_actions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        fab:fab_addButtonColorNormal="#3B8AC6"
        fab:fab_addButtonColorPressed="#1277C5"
        fab:fab_addButtonPlusIconColor="#ffffff"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/item1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="#3B8AC6"
            fab:fab_colorPressed="#1277C5"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/item2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="#3B8AC6"
            fab:fab_colorPressed="#1277C5"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/item3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="#3B8AC6"
            fab:fab_colorPressed="#1277C5"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/item4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="#3B8AC6"
            fab:fab_colorPressed="#1277C5"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/item5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="#3B8AC6"
            fab:fab_colorPressed="#1277C5"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/item6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_addButtonPlusIconColor="#ffffff"
            fab:fab_colorNormal="#3B8AC6"
            fab:fab_colorPressed="#1277C5"/>
        
    </com.getbase.floatingactionbutton.FloatingActionsMenu>
</RelativeLayout>
