<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="joandev.jedimeetingsapp.ui.MeetingList.MeetingListActivity">


    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:background="#ffffff"
        android:id="@+id/list2" android:layout_gravity="center_horizontal|top"
    />

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/plus"
        fab:fab_colorNormal="#659CFA"
        fab:fab_colorPressed="#3E83FA"
        fab:fab_colorRipple="#1669F7" />

</FrameLayout>
